{
    "name": "NSFW Filtering Extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "512": "images/icon512.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "initial_hide.css"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "model_tfjs_saved_model/model.json",
                "model_tfjs_saved_model/*.bin"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}